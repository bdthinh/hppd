<h1>Posts</h1>
<% if @posts.present? %>
  <table class="table table-bordered table-striped table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>By user</th>
        <th>Categories</th>
        <th></th>
      </tr>
    </thead>
    <tbody id="posts">
      <%= render 'posts/posts' %>
    </tbody>
  </table>
<% end %>
<%= link_to 'New Post', new_post_path %>